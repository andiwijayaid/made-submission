<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_within_object"
        android:layout_height="?android:attr/actionBarSize"
        app:contentInsetStart="0dp">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/posterBackgroundIV"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:alpha="0.6"
        android:contentDescription="@string/poster"
        android:scaleType="centerCrop"
        android:src="@drawable/poster_a_star" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_white_to_transparent" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="@dimen/margin_within_object"
        android:layout_marginTop="120dp"
        android:layout_marginRight="@dimen/margin_within_object"
        app:cardCornerRadius="@dimen/card_view_radius"
        app:cardElevation="@dimen/margin_within_object"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_within_object"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:text="@string/title"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:text="@string/date"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginTop="14dp"
                android:text="@string/rating"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:progressTint="@color/yellow_gold"
                android:secondaryProgressTint="@color/yellow_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="@dimen/margin_within_object"
                android:layout_marginTop="@dimen/margin_within_object"
                android:textColor="@android:color/black"
                android:text="@string/overview" />

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/overviewTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_within_object"
                android:layout_marginEnd="@dimen/margin_within_object"
                android:text="@string/overview"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_within_object"
                android:text="@string/budget"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_within_object"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:text="@string/dollar_sign"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/budgetTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dollar_sign" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_within_object"
                android:text="@string/revenue"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_within_object"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dollar_sign"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/yellow_gold"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/revenueTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dollar_sign" />

            </LinearLayout>

            <Button
                android:id="@+id/watchBT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/watch_now"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/margin_within_object"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:transitionName="@string/poster"
        app:cardCornerRadius="@dimen/card_view_radius"
        app:cardElevation="@dimen/margin_within_object"
        tools:targetApi="lollipop">

        <ImageView
            android:id="@+id/posterIV"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:contentDescription="@string/poster"
            android:scaleType="centerCrop"
            android:src="@drawable/poster_a_star" />

    </android.support.v7.widget.CardView>

</RelativeLayout>